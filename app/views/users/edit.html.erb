<div class='container'>  
  <h1>Edit <%= @user.first_name %> <%= @user.last_name %> </h1>
  <%= form_tag url_for(action: 'update'), method: "PUT" do %>
    <div class='form-group'>
      <%= label_tag 'first_name :' %>
      <%= text_field_tag 'first_name', @user.first_name, class: 'form-control'  %>
    </div>
    <div class='form-group'>
      <%= label_tag 'last_name :' %>
      <%= text_field_tag 'last_name', @user.last_name, class: 'form-control'  %>
    </div>
    <div class='form-group'>
      <%= label_tag 'email :' %>
      <%= text_field_tag 'email', @user.email, class: 'form-control'  %>
    </div>
    <div class='form-group'>
      <%= label_tag 'description :' %>
      <%= text_field_tag 'description', @user.description, class: 'form-control'  %>
    </div>
    <div class='form-group'>
      <%= label_tag 'password (en dev) :' %>
      <%= password_field_tag 'encrypted_password', nil, class: 'form-control'  %>
    </div>
    <div class='form-group'>
      <%= label_tag 'admin ? :' %>
      <%= text_field_tag 'is_admin', @user.is_admin, class: 'form-control'  %>
    </div>
     <%= submit_tag "edit user ", class: 'btn btn-primary' %>
    <% end %>
</div>